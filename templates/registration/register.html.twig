{% extends 'base.html.twig' %}

{% block title %}Inscription | {{ parent() }}{% endblock %}

{% block body %}

    {% include('inc/flashMessages.html.twig') %}

    <div>
        <h1>Nouveau compte</h1>

        {{ form_start(registrationForm) }}
        <div>
            {{ form_widget(registrationForm) }}
            <br>
            <button type="submit" class="btn">Register</button>
        </div>
        {{ form_end(registrationForm) }}
        <br>
        {% if is_granted('ROLE_ADMIN')%}
            {#   en tant qu'administrateur nous avons accès à la liste des participants#}
            <a href="{{ path('participants_afficher') }}"><button>Gérer les participants</button></a>
        {% endif %}
    </div>


{% endblock %}
